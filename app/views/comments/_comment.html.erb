<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p class="comment-posted-by">By: <%= comment.user.email %> 
   <%= time_ago_in_words(comment.created_at) %> 前 </p>

  <div class="links">
    <% if user_signed_in? %>
      <% if comment.user_id == current_user.id %>
        <%= link_to "編集", edit_message_comment_path(comment.message, comment) %>
        <%= link_to "削除", message_comment_path(comment.message, comment),
        method: :delete, data: { confirm: "本当に削除してよろしいですか" } %>
      <% end %>
    <% end %>
  </div>

</div>
